<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!--

        Extensión de las vistas formulario / lista de las plantillas
        del plan contable (cuentas, impuestos y otros), para añadir un
        campo con el nombre de la plantilla en si (para poder diferenciar
        entre PGCE 2008 y PGCE PYMES).

        -->

        <!-- Account Templates -->
        <record id="view_account_template_form" model="ir.ui.view">
            <field name="name">account.account.template.form</field>
            <field name="model">account.account.template</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_account_template_form"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="template_name"/>
                    <newline/>
                </field>
            </field>
        </record>

        <record id="view_account_template_tree" model="ir.ui.view">
