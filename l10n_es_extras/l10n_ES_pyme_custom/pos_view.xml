<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <!--Mejoras en el uso del TPV-->
    <data>
        <record model="ir.ui.view" id="view_pos_pos_form_z1">
            <field name="name">pos.order.form.z2</field>
            <field name="model">pos.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" on_change="onchange_partner_pricelist(partner_id)" position="replace">
                    <field name="partner_id" on_change="onchange_partner_pricelist(partner_id)" select="1"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_pos_pos_form_z2">
            <field name="name">pos.order.form.z3</field>
            <field name="model">pos.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <field name="payment_id" position="replace">
                    <field name="journal_id"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_pos_order_tree_z1">
            <field name="name">Sales</field>
            <field name="model">pos.order</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="partner_id"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
