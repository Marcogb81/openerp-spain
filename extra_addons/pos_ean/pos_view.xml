<?xml version="1.0"?>
<terp>
<data>


	<record model="ir.ui.view" id="view_pos_order_form2">
		<field name="name">pos.order</field>
		<field name="model">pos.order</field>
		<field name="inherit_id" ref="pos.view_pos_order_form"/>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<field name="order_line" position="replace" />
		</field>
	</record>


	<record model="ir.ui.view" id="view_pos_order_form3">
		<field name="name">pos.order</field>
		<field name="model">pos.order</field>
		<field name="inherit_id" ref="pos.view_pos_order_form"/>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<group name="totals" position="before">
					<field name="order_line" colspan="4" nolabel="1">
						<tree string="Order lines" editable="bottom">
							<field name="ean13"
							on_change="onchange_ean13(ean13,parent.pricelist_id,qty,parent.partner_id)" width="80"/>
							<field name="product_id" on_change="onchange_product_id(parent.pricelist_id,product_id,qty,parent.partner_id)" width="300"/>
							<field name="qty" />
							<field name="discount" />
							<field name="price_unit" />
							<field name="price_subtotal"/>
						</tree>
						<form string="Order lines">
							<field name="ean13"/>
							<field name="product_id" on_change="onchange_product_id(parent.pricelist_id,product_id,qty,parent.partner_id)"/>
							<field name="qty" />
							<field name="discount" />
							<field name="price_unit" />
							<field name="price_subtotal"/>
						</form>
					</field>
			</group>
		</field>
	</record>


	<record model="ir.ui.view" id="view_pos_order_line2">
		<field name="name">pos.order.line</field>
		<field name="model">pos.order.line</field>
		<field name="inherit_id" ref="pos.view_pos_order_line"/>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<field name="product_id" position="before">
				<field name="order_id" readonly="1"/>
				<field name="ean13" readonly="1"/>
			</field>
		</field>
	</record>


	<record model="ir.ui.view" id="view_pos_order_line_form">
		<field name="name">pos.order.line.form</field>
		<field name="model">pos.order.line</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="POS Order lines">
				<field name="order_id" select="1"/>
				<field name="ean13" select="1"/>
				<field name="product_id" select="1"/>
				<field name="create_date" select="1"/>
			</form>
		</field>
	</record>


</data>
</terp>
