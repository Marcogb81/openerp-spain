        <field name="picked_sum"/>
            </field>
        </field>
        </record>

    <record model="ir.ui.view" id="view_sale_order_line_date_form2">
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_form2"/>
